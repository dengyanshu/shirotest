      <dependency>
           <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-mail</artifactId>
      </dependency>
      
      <dependency>
           <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-jdbc</artifactId>
      </dependency>
       
     <!-- 禁用默认的logbak或者log4j2 启用我自己熟悉的log4j -->
